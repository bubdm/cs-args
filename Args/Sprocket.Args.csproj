<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>library</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <Nullable>enable</Nullable>

    <PackageId>Sprocket.Args</PackageId>
    <PackageVersion>1.0.0</PackageVersion>
    <Authors>davidpullin</Authors>
    <Title>Command Line Argument Parser</Title>
    <Description>Args is a command line argument parser.  It aims to be simple to configure and forgiving when parsing input. Configuration is performed via XML. Both the configuration and parsed results contain two main objects: **Commands** and **Options**.</Description>
    <PackageSummary>Args is a command line argument parser.  It aims to be simple to configure and forgiving when parsing input. Configuration is performed via XML. Both the configuration and parsed results contain two main objects: **Commands** and **Options**.</PackageSummary>
    <Copyright>Â© David Pullin 2021</Copyright>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>GPL-3.0-only</PackageLicenseExpression>
    <PackageIcon>Sprocket.Args.jpg</PackageIcon>
    <PackageTags>Text;Command;Arguments;Command Line;Parser</PackageTags>
    <PackageReleaseNotes></PackageReleaseNotes>
    <PackageProjectUrl>https://ict-man.me/sprocket/api/Sprocket.Args.html</PackageProjectUrl>
    <RepositoryUrl>https://github.com/david-pullin/cs-args</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>


  <Choose>
    <When Condition=" '$(Configuration)'=='Release' ">
      <PropertyGroup>
        <Optimize>true</Optimize>
      </PropertyGroup>
    </When>
  </Choose>

  <ItemGroup>
      <None Include="Sprocket.Args.jpg" Pack="true" PackagePath="\"/>
  </ItemGroup>

</Project>
